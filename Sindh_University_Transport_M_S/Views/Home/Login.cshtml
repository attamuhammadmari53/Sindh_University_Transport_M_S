@model Sindh_University_Transport_M_S.Models.Login_Admin
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Share/Login_Layout.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <h2  style="margin-left:37%">Admin Login</h2>
    <hr style="width:40%" class="col-md-offset-3" />
    <div class="col-md-offset-3" style="border:2px solid gray; width:40%">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row col-md-offset-3">
            <div class="col-md-9">
                <div class="form-group">
                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })

                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control " } })
                    @Html.ValidationMessageFor(model=>model.Email, "", new { @class="text-danger"})
                </div>
            </div>
        </div>


        <div class="row col-md-offset-3">
            <div class="col-md-9">
                <div class="form-group">
                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })

                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model=>model.Password, "" , new  {@class="text-danger" })
                </div>
            </div>
        </div>
        
        


        <div class="form-group">
            <div class="col-md-10 col-md-offset-3">
                <input type="submit" value="Login" class="btn btn-default btn-primary col-md-3" />
                    @if (ViewBag.msg != null)
                    {
                        string message = ViewBag.msg;
                    <p style="color:red">@Html.Label(message, new { @class = "control-label col-md-7" })</p>
                    }
            </div>
        </div>
        
        <br />
        <br />
    </div>


}

